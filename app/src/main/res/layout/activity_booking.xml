<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/textViewBookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Information"
        android:textSize="24sp"
        android:textColor="#000000"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewBookingDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Here you can provide the booking details..."
        android:textSize="16sp"
        android:textColor="#212121"
        app:layout_constraintTop_toBottomOf="@id/textViewBookingTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonConfirmBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:backgroundTint="#2196F3"
    android:textColor="@android:color/white"
    app:layout_constraintTop_toBottomOf="@id/textViewBookingDetails"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
